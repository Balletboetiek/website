{{> header }}
        <main>
            <div class="where"><span>{{{ here }}}</span></div>
            <section>
                <h1>Rooster seizoen {{ period.start }} &mdash; {{ period.end }}</h1>
                <p>
                    Het dansseizoen loopt van {{ period.date.start }} {{ period.start }}
                    tot en met {{ period.date.end }} {{ period.end }}.
                    (&plusmn; {{ period.weeks }} lesweken)
                </p>
                <table class="timetable">
                    <thead>
                        <tr>
                            <th>Tijd</th>
                            <th>Maandag</th>
                            <th>Dinsdag</th>
                            <th>Woensdag</th>
                            <th>Donderdag</th>
                            <th>Vrijdag</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#timetable}}
                            <tr>
                                <td>{{ time.start }} - {{ time.end }}</td>
                                {{#columns}}
                                <td>
                                    {{#monday}}
                                        <h3>{{ class }}{{#teacher}} ({{ teacher }}){{/teacher}}</h3>
                                        <p>{{ description }}</p>
                                        <ul>
                                            {{#notes}}
                                            <li>{{ text }}</li>
                                            {{/notes}}
                                        </ul>
                                    {{/monday}}
                                </td>
                                <td>
                                    {{#tuesday}}
                                        <h3>{{ class }}{{#teacher}} ({{ teacher }}){{/teacher}}</h3>
                                        <p>{{ description }}</p>
                                        <ul>
                                            {{#notes}}
                                            <li>{{ text }}</li>
                                            {{/notes}}
                                        </ul>
                                    {{/tuesday}}
                                </td>
                                <td>
                                    {{#wednesday}}
                                        <h3>{{ class }}{{#teacher}} ({{ teacher }}){{/teacher}}</h3>
                                        <p>{{ description }}</p>
                                        <ul>
                                            {{#notes}}
                                            <li>{{ text }}</li>
                                            {{/notes}}
                                        </ul>
                                    {{/wednesday}}
                                </td>
                                <td>
                                    {{#thursday}}
                                        <h3>{{ class }}{{#teacher}} ({{ teacher }}){{/teacher}}</h3>
                                        <p>{{ description }}</p>
                                        <ul>
                                            {{#notes}}
                                            <li>{{ text }}</li>
                                            {{/notes}}
                                        </ul>
                                    {{/thursday}}
                                </td>
                                <td>
                                    {{#friday}}
                                        <h3>{{ class }}{{#teacher}} ({{ teacher }}){{/teacher}}</h3>
                                        <p>{{ description }}</p>
                                        <ul>
                                            {{#notes}}
                                            <li>{{ text }}</li>
                                            {{/notes}}
                                        </ul>
                                    {{/friday}}
                                </td>
                                {{/columns}}
                            </tr>
                        {{/timetable}}
                    </tbody>
                    <tbody></tbody>
                </table>
            </section>
            {{{ stories }}}
        </main>
{{> footer }}

